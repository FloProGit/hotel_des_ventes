<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<div>
    <form action="" method="get" class="">
        <div class="my-2">
            <label for="name-product">Nom du produit </label>
            <input type="text" name="name-product" id="name-product" required>
        </div>
        <div class="my-3">
            <label for="description-product">prix </label>
            <input name="description-product" id="description-product" required>
        </div>
        <div class="my-3">
            <label for="prix-product">description</label>
            <input name="prix-product" id="prix-product" required>
        </div>
        <div class="my-3">
            <input class="bg-[color:var(--bg-button-color)] px-5 py-3" type="submit" value="Créer produit!">
        </div>

    </form>
</div>


